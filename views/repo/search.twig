{% extends 'general' %}

{% import 'repo/_macro' %}

{% block pageTitle %}
    JPPM Пакеты
{% endblock %}

{% block content %}
    <div class="col-xs-12">
        <div class="row">
            <div class="col-md-3">
                {{ repo_menu('search') }}
            </div>
            <div class="col-xs-8">
                <div class="project-search-pane">
                    <div class="panel panel-default">
                        <div class="panel-heading">Поиск пакетов</div>
                        <div class="panel-body">
                            <form action="" name="searchForm" method="get">
                                <div class="form-group">
                                    <span class="input-group">
                                        <input type="text" name="q" value="{{ queryParam }}"
                                               placeholder="Введите поисковую фразу... и нажмите Enter."
                                               id="query" class="form-control">
                                        <span class="input-group-btn"><button type="submit" class="btn btn-primary">Найти</button></span>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>
                    <hr>
                    <div>
                        {% if packages is not empty %}
                            {% for pkg in packages %}
                                {{ package_card(pkg) }}
                            {% endfor %}
                        {% elseif queryParam is not empty %}
                            Ничего не найдено.
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $('input[type=checkbox][name=popular]').on('click', function () {
            if ($('input[name=q]').val()) {
                console.log('Search form submit ...');
                $('form[name=searchForm]').submit();
            }
        });
    </script>
{% endblock %}